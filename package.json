{
  "name": "@bitblit/ratchet",
  "version": "0.0.0",
  "description": "Common tools for general use",
  "private": true,
  "workspaces": {
    "packages": [
      "modules/*"
    ],
    "_nohoist": [
      "**/json5",
      "**/json5/**",
      "**/ts-jest",
      "**/ts-jest/**",
      "**/canvas",
      "**/canvas/**"
    ]
  },
  "contributors": [
    "Christopher Weiss <bitblit@gmail.com>",
    "William Weiss <npm@codification.org>",
    "Austin Grantham <agrantham@algidious.com>",
    "Lucas Myers <veganbeef@protonmail.com>",
    "Joel Flint <joel@stimulimedia.net>",
    "Bilal Shahid <bshahid@adomni.com>"
  ],
  "scripts": {
    "clean": "wsrun mod:clean",
    "build": "wsrun --serial mod:build",
    "test": "wsrun mod:test --detectOpenHandles",
    "apply-github-info": "./apply-github-info.sh",
    "set-codependencies": "echo $GITHUB_RUN_NUMBER && ./set-codependencies.sh 4.0.$GITHUB_RUN_NUMBER",
    "set-codependencies-alpha": "echo $GITHUB_RUN_NUMBER && ./set-codependencies.sh 4.0.\"$GITHUB_RUN_NUMBER\"-alpha",
    "publish": "wsrun mod:publish",
    "publish-alpha": "wsrun mod:publish",
    "mod:generate-barrels": "cd $INIT_CWD && barrelsby -e \".*\\.spec\\.ts\" -q --delete -d src && sed -i 's/\\x27;/.js\\x27;/' src/index.ts",
    "mod:build": "cd $INIT_CWD && yarn mod:clean && yarn mod:generate-barrels && cd $INIT_CWD && rollup -c rollup.config.js",
    "mod:clean": "cd $INIT_CWD && shx rm -Rf lib",
    "mod:docs": "cd $INIT_CWD && typedoc",
    "mod:lint": "cd $INIT_CWD && eslint src/**/*.ts",
    "mod:lint-fix": "cd $INIT_CWD && eslint --fix src/**/*.ts",
    "mod:test": "cd $INIT_CWD && cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "mod:watch": "cd $INIT_CWD && tsc-watch",
    "mod:force-build": "cd $INIT_CWD && tsc --build --force",
    "mod:publish": "cd $INIT_CWD && cat package.json && yarn npm publish --access public",
    "__mod:publish-alpha": "cd $INIT_CWD && yarn npm publish --new-version 4.0.\"$GITHUB_RUN_NUMBER\"-alpha --no-git-tag-version --non-interactive "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bitblit/Ratchet"
  },
  "keywords": [
    "ratchet",
    "wrench",
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/bitblit/Ratchet/issues"
  },
  "homepage": "https://github.com/bitblit/Ratchet#readme",
  "engines": {
    "node": ">=14.18"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "cross-fetch": "4.0.0",
    "luxon": "3.3.0"
  },
  "peerDependencies": {
    "cross-fetch": "^4.0.0",
    "luxon": "3.3.0"
  },
  "resolutions": {
    "semver": "^7.5.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "25.0.3",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.1.0",
    "@rollup/plugin-terser": "0.4.3",
    "@rollup/plugin-typescript": "11.1.2",
    "@types/jest": "29.5.3",
    "@types/luxon": "3.3.0",
    "@types/node": "18.15.11",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "barrelsby": "2.8.0",
    "concurrently": "8.2.0",
    "cross-env": "7.0.3",
    "esbuild": "0.18.14",
    "esbuild-plugin-glob": "2.2.2",
    "esbuild-plugin-polyfill-node": "0.3.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.6.1",
    "jest-when": "3.5.2",
    "node-gyp": "9.4.0",
    "npm-dts": "1.3.12",
    "prettier": "3.0.0",
    "pretty-quick": "3.1.3",
    "renamer": "4.0.0",
    "rimraf": "5.0.1",
    "rollup": "3.26.3",
    "rollup-plugin-natives": "0.7.6",
    "rollup-plugin-polyfill-node": "0.12.0",
    "shx": "0.3.4",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsc-watch": "6.0.4",
    "typedoc": "0.24.8",
    "typescript": "5.1.6",
    "wsrun": "5.2.4"
  },
  "packageManager": "yarn@3.6.1"
}
