{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "_angularCompilerOptions": {
    "enableIvy": true,  // Ivy renderer, default in Angular 9+
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "skipTemplateCodegen": false,  // Ensure codegen is not skipped
    "compileNonExportedClasses": true,
    "compilationMode": "full",  // Full AOT compilation
    "skipMetadataEmit": false  // Ensure metadata files are emitted
  },
  "extends": "../../tsconfig.json",
  "include": ["src/"]
}