{
  "compilerOptions": {
    "declaration": false,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "stripInternal": true
  },
  "angularCompilerOptions": {
    "enableIvy": true,  // Ivy renderer, default in Angular 9+
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "skipTemplateCodegen": false,  // Ensure codegen is not skipped
    "compileNonExportedClasses": true,
    "compilationMode": "full"
  },
  "extends": "../../tsconfig.json",
  "include": ["src/"]
}